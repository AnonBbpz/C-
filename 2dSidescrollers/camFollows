using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class camFollows : MonoBehaviour {

    private float distanceToMove;
    public moveTheFuckingPlayer thePlayer;
    private Vector3 lasPos;

    private void Start(){
        thePlayer = FindObjectOfType<moveTheFuckingPlayer>();

    }
    // Update is called once per frame

    void Update(){
        distanceToMove = thePlayer.transform.position.x - lasPos.x;
        transform.position = new Vector3(transform.position.x + distanceToMove, transform.position.y, transform.position.x);
        lasPos = thePlayer.transform.position;

    }

}
